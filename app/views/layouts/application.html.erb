<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= content_for?(:title) ? yield(:title) + ' | Park Bench App' : 'Park Bench App' %></title>

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "vendor/custom.modernizr" %>
  <%= csrf_meta_tags %>
</head>

<body>
<div class="contain-to-grid">
  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to "Park Bench App", root_path %></a></h1>
      </li>
    </ul>
    <section class="top-bar-section">
      <ul class="right">
        <% if user_signed_in? %>
          <li class="divider"></li>
          <li><%= link_to "News List", root_path %></li>

          <li class="divider"></li>
          <li><%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'button round') %></li>
        <% else %>
          <li class="divider"></li>
          <li>
            <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(:user) %>
            <% end -%>
          </li>

          <li>
            <%- if controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(:user) %>
            <% end -%>
          </li>
        <% end %>
      </ul>
    </section>
  </nav>
</div>
<div class="row">
  <div class="large-12 columns"><%= yield %></div>
</div>

<%= javascript_include_tag "application" %>
</body>
</html>
