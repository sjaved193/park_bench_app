<div class="row">
  <div class="small-3 small-offset-3 columns">
    <h4>Sign up</h4>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :email, class: "right inline" %>
    </div>
    <div class="small-4 columns end"><%= f.email_field :email, autofocus: true, required: "required" %></div>
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :password, class: "right inline" %>
      <% if !@validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    </div>
    <div class="small-4 columns end"><%= f.password_field :password, autocomplete: "off", required: "required" %></div>
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :password_confirmation, class: "right inline" %>
    </div>
    <div class="small-4 columns end"><%= f.password_field :password_confirmation, autocomplete: "off", required: "required" %></div>
  </div>

  <div class="row">
    <div class="small-9 small-offset-3 columns"><%= f.submit "Sign up", class: 'button small radius' %></div>
  </div>
<% end %>
